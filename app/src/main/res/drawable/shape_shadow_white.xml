<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow -->
    <item>
        <shape>
            <padding
                android:bottom="1.8dp"
                android:left="1dp"
                android:right="1.8dp"
                android:top="1dp" />

            <solid android:color="@color/shadowBlack1" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1.8dp"
                android:left="0.6dp"
                android:right="1.8dp"
                android:top="0.6dp" />

            <solid android:color="@color/shadowBlack2" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>