<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_single"
    style="@style/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/RectangleCard"
        android:gravity="top"
        android:paddingTop="@dimen/card_small_padding"
        android:paddingBottom="@dimen/card_small_padding">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/notification_pic"
                android:layout_width="@dimen/medium_pic_size"
                android:layout_height="@dimen/medium_pic_size"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_placeholder_user_pic" />

            <ImageView
                android:layout_width="@dimen/medium_frame_size"
                android:layout_height="@dimen/medium_frame_size"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_circle_stroke_grey"
                android:contentDescription="@null" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/card_large_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_message"
                style="@style/RectangleCardText"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/card_small_margin"
                android:text="@string/message" />

            <TextView
                android:id="@+id/notification_time"
                style="@style/RectangleCardSmallText"
                android:layout_width="match_parent"
                android:text="@string/time" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>