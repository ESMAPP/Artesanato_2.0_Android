<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/notification_double_pic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            style="@style/shadowNotificationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_shadow_white"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <FrameLayout
                android:id="@+id/notifications_pic_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp">

                <ImageView
                    android:id="@+id/pic_2"
                    android:layout_width="@dimen/medium_pic_size"
                    android:layout_height="@dimen/medium_pic_size"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:contentDescription="@null"
                    app:srcCompat="@android:drawable/sym_def_app_icon" />

                <ImageView
                    android:layout_width="@dimen/medium_frame_size"
                    android:layout_height="@dimen/medium_frame_size"
                    android:background="@drawable/shape_circle"
                    android:contentDescription="@null"
                    android:scaleType="center" />

            </FrameLayout>

            <TextView
                android:id="@+id/notification_message"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/message" />

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/time"
                android:textAlignment="textEnd" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>