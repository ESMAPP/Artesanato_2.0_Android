<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artisan_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3"
    tools:context=".view.artisan.ArtisanPageFragment">

    <FrameLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/ImgBtn"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_shadow_bottom_round"
            android:contentDescription="@null"
            app:srcCompat="@drawable/bar_top_2" />

        <LinearLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/artisan_pic"
                    android:layout_width="@dimen/pic_size"
                    android:layout_height="@dimen/pic_size"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_placeholder_user_pic" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_circle"
                    android:contentDescription="@null"
                    android:scaleType="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/artisan_name"
                style="@style/Title"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/name"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/ImgBtn"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/i_cup_color" />

                <TextView
                    android:id="@+id/artisan_ranking"
                    style="@style/Text"
                    android:layout_marginStart="6dp"
                    android:text="@string/value" />

                <ImageView
                    style="@style/ImgBtn"
                    android:layout_height="18dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/i_star_color" />

                <TextView
                    android:id="@+id/artisan_reputation"
                    style="@style/Text"
                    android:layout_marginStart="6dp"
                    android:text="@string/value" />
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/inner_nav_bar"
                style="@style/SmallTabLayout"
                android:layout_marginTop="@dimen/parent_inner_margin"
                android:fadingEdgeLength="30dp"
                android:requiresFadingEdge="horizontal"
                app:tabMode="scrollable">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="@string/label_gallery" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="@string/label_reviews" />

            </com.google.android.material.tabs.TabLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/parent_top_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_back"
                    style="@style/ImgBtn"
                    android:contentDescription="@string/description_go_back"
                    android:paddingEnd="8dp"
                    app:srcCompat="@drawable/i_arrow_back_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnExtra"
                    style="@style/ImgBtn"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/description_menu"
                    android:paddingStart="10dp"
                    app:srcCompat="@drawable/i_more_grey" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_artisan"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bottom_bar"
        android:minHeight="25dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_chat"
        style="@style/ImgBtn"
        android:layout_marginEnd="@dimen/parent_top_margin"
        android:layout_marginBottom="10dp"
        android:src="@drawable/btn_chat_color"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>