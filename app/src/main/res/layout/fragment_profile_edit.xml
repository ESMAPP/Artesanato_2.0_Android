<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_5"
    tools:context=".view.ProfileEditFragment">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                style="@style/imgText"
                android:contentDescription="@string/go_back"
                android:paddingEnd="8dp"
                app:srcCompat="@drawable/btn_arrow_back_color" />

            <TextView
                android:id="@+id/textView"
                style="@style/blackTitle"
                android:layout_marginStart="20dp"
                android:text="@string/editProfile"
                android:textSize="18sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:contentDescription="@string/profilePicture"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <ImageView
                android:id="@+id/profilePicFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle"
                android:contentDescription="@string/profilePictureFrame"
                android:scaleType="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/edit_profile"
            style="@style/blueText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/changeProfilePic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/input_edit_name"
                style="@style/shadowInput"
                android:autofillHints="@string/full_name"
                android:background="@drawable/shape_shadow"
                android:drawableStart="@drawable/i_user_color"
                android:hint="@string/full_name"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/input_edit_email"
                style="@style/shadowInput"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/email"
                android:background="@drawable/shape_shadow"
                android:drawableStart="@drawable/i_letter_color"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/input_edit_password"
                style="@style/shadowInput"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/password"
                android:background="@drawable/shape_shadow"
                android:drawableStart="@drawable/i_key_color"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/input_edit_confirm_password"
                style="@style/shadowInput"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/confirmPassword"
                android:background="@drawable/shape_shadow"
                android:drawableStart="@drawable/i_key_color"
                android:hint="@string/confirmPassword"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/btn_save"
                style="@style/imgText"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/save"
                app:srcCompat="@drawable/btn_arrow_color" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>