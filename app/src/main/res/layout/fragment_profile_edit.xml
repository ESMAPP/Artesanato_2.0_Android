<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    tools:context=".view.ProfileEditFragment">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            style="@style/imgBtn"
            android:contentDescription="@string/goBack"
            android:paddingEnd="8dp"
            app:srcCompat="@drawable/i_arrow_back_color" />

        <TextView
            android:id="@+id/textView"
            style="@style/blackTitle"
            android:layout_marginStart="20dp"
            android:text="@string/editProfile"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:contentDescription="@string/profilePicture"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <ImageView
                android:id="@+id/profilePicFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle"
                android:contentDescription="@string/profilePictureFrame"
                android:scaleType="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/editProfile"
            style="@style/blueText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/changeProfilePic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic">

        <EditText
            android:id="@+id/inputEditName"
            style="@style/shadowInput"
            android:autofillHints="@string/fullName"
            android:background="@drawable/shape_white_shadow"
            android:drawableStart="@drawable/i_user_color"
            android:hint="@string/fullName"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/inputEditPassword"
            style="@style/shadowInput"
            android:layout_marginTop="20dp"
            android:autofillHints="@string/password"
            android:background="@drawable/shape_white_shadow"
            android:drawableStart="@drawable/i_key_color"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/inputEditConfirmPassword"
            style="@style/shadowInput"
            android:layout_marginTop="20dp"
            android:autofillHints="@string/confirmPassword"
            android:background="@drawable/shape_white_shadow"
            android:drawableStart="@drawable/i_key_color"
            android:hint="@string/confirmPassword"
            android:inputType="textPassword" />

        <ImageButton
            android:id="@+id/btn_save"
            style="@style/imgBtn"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/save"
            app:srcCompat="@drawable/btn_arrow_color" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>