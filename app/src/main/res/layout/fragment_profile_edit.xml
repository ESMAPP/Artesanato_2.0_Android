<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    tools:context=".view.ProfileEditFragment">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="@dimen/dimen0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/parentOuterMargin"
        android:layout_marginTop="@dimen/parentTopMargin"
        android:layout_marginEnd="@dimen/parentOuterMargin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            style="@style/imgBtn"
            android:contentDescription="@string/description_go_back"
            android:paddingEnd="8dp"
            app:srcCompat="@drawable/i_arrow_back_color" />

        <TextView
            style="@style/blackTitle"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/label_edit_profile"
            android:textSize="@dimen/textSize18" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pic"
        android:layout_width="@dimen/dimen0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/parentOuterMargin"
        android:layout_marginTop="@dimen/parentInnerMargin"
        android:layout_marginEnd="@dimen/parentOuterMargin"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/picSize"
                android:layout_height="@dimen/picSize"
                android:layout_gravity="center"
                android:contentDescription="@null"
                app:srcCompat="@drawable/placeholder_user_pic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle"
                android:contentDescription="@null"
                android:scaleType="center" />

        </FrameLayout>

        <TextView
            android:id="@+id/edit_profile"
            style="@style/blueText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/label_change_profile_pic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/parentInnerMargin"
        android:layout_marginTop="@dimen/parentInnerMargin"
        android:layout_marginEnd="@dimen/parentInnerMargin"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic">

        <EditText
            android:id="@+id/input_edit_name"
            style="@style/shadowInput"
            android:layout_marginTop="@dimen/dimen0"
            android:autofillHints="@string/hint_full_name"
            android:drawableStart="@drawable/i_user_color"
            android:hint="@string/hint_full_name"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/input_edit_password"
            style="@style/shadowInput"
            android:autofillHints="@string/hint_password"
            android:drawableStart="@drawable/i_key_color"
            android:hint="@string/hint_password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/input_edit_confirm_password"
            style="@style/shadowInput"
            android:autofillHints="@string/hint_confirm_password"
            android:drawableStart="@drawable/i_key_color"
            android:hint="@string/hint_confirm_password"
            android:inputType="textPassword" />

        <ImageButton
            android:id="@+id/btn_save"
            style="@style/btnForm"
            android:contentDescription="@string/description_save"
            app:srcCompat="@drawable/btn_arrow_color" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>