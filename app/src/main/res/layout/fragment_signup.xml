<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/parentInnerMargin"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="@dimen/parentInnerMargin"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/input_name"
            style="@style/shadowInput"
            android:layout_marginTop="@dimen/zero"
            android:autofillHints="@string/fullName"
            android:drawableStart="@drawable/i_user_color"
            android:hint="@string/fullName"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_email"
            style="@style/shadowInput"
            android:layout_marginTop="@dimen/inputMarginPadding"
            android:autofillHints="@string/email"
            android:drawableStart="@drawable/i_letter_color"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/input_password"
            style="@style/shadowInput"
            android:layout_marginTop="@dimen/inputMarginPadding"
            android:autofillHints="@string/password"
            android:drawableStart="@drawable/i_key_color"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/input_confirm_password"
            style="@style/shadowInput"
            android:layout_marginTop="@dimen/inputMarginPadding"
            android:autofillHints="@string/confirmPassword"
            android:drawableStart="@drawable/i_key_color"
            android:hint="@string/confirmPassword"
            android:inputType="textPassword" />

        <ImageButton
            android:id="@+id/btn_submit"
            style="@style/imgBtn"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/inputMarginPadding"
            android:contentDescription="@string/submitForm"
            app:srcCompat="@drawable/btn_arrow_color" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>