<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/lightGrey</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/primaryBlue</item>
    </style>

    <!-- Splash Screen Style -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
    </style>

    <!-- Tab Layout Style -->
    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_tab_underline_grey</item>
        <item name="tabIndicatorColor">@color/primaryBlue</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <!-- Tab Big Title Style -->
    <style name="tabLayoutBig" parent="tabLayout">
        <item name="tabTextAppearance">@style/tabBigTitle</item>
    </style>

    <!-- Tab Small Title Style -->
    <style name="tabLayoutSmall" parent="tabLayout">
        <item name="tabTextAppearance">@style/tabSmallTitle</item>
    </style>

    <!-- Title Style -->
    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mina_regular</item>
    </style>

    <!-- Black Title Style -->
    <style name="blackTitle" parent="title">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Tab Big Title Style -->
    <style name="tabBigTitle" parent="title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/mediumGrey</item>
    </style>

    <!-- Tab Small Title Style -->
    <style name="tabSmallTitle" parent="title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mediumGrey</item>
    </style>

    <!-- Text Style -->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <!-- Grey Text Style -->
    <style name="greyText" parent="text">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Blue Text Style -->
    <style name="blueText" parent="text">
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <!-- Img / Btn Style -->
    <style name="imgBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Input Style -->
    <style name="shadowInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColorHint">@color/mediumGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Home Card Style -->
    <style name="shadowHomeCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_bg_card_1_shadow</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
