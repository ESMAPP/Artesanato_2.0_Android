<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/lightGrey</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/primaryBlue</item>
    </style>

    <!-- Splash Screen Style -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
    </style>

    <!-- Tab Layout Style -->
    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_tab_underline_grey</item>
        <item name="tabIndicatorColor">@color/primaryBlue</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <!-- Tab Big Title Style -->
    <style name="bigTabLayout" parent="tabLayout">
        <item name="tabTextAppearance">@style/bigTabTitle</item>
    </style>

    <!-- Tab Small Title Style -->
    <style name="smallTabLayout" parent="tabLayout">
        <item name="tabTextAppearance">@style/smallTabTitle</item>
    </style>

    <!-- Title Style -->
    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mina_regular</item>
    </style>

    <!-- Black Title Style -->
    <style name="blackTitle" parent="title">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Tab Big Title Style -->
    <style name="bigTabTitle" parent="title">
        <item name="android:textSize">@dimen/textSize22</item>
        <item name="android:textColor">@color/mediumGrey</item>
    </style>

    <!-- Tab Small Title Style -->
    <style name="smallTabTitle" parent="title">
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:textColor">@color/mediumGrey</item>
    </style>

    <!-- Text Style -->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <!-- Grey Text Style -->
    <style name="greyText" parent="text">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Blue Text Style -->
    <style name="blueText" parent="text">
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <!-- Menu Text Style -->
    <style name="menuText" parent="greyText">
        <item name="android:textSize">@dimen/textSize12</item>
    </style>

    <!-- Img / Btn Style -->
    <style name="imgBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Input Style -->
    <style name="shadowInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/inputHeight</item>
        <item name="android:layout_marginTop">@dimen/inputMargin</item>
        <item name="android:paddingLeft">@dimen/inputPadding</item>
        <item name="android:paddingRight">@dimen/inputPadding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/inputPadding</item>
        <item name="android:textColorHint">@color/mediumGrey</item>
        <item name="android:background">@drawable/shape_shadow_white</item>
        <item name="android:textSize">@dimen/textSize12</item>
    </style>

    <!-- Home Card Style -->
    <style name="shadowHomeCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_shadow_bg_card_1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Notification Card Style -->
    <style name="shadowNotificationCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/shape_shadow_white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
