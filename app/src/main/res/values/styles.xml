<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/lightGrey</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/primaryBlue</item>
    </style>

    <!-- Splash Screen Style -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
    </style>

    <!-- Black Title Style -->
    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mina_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Text Style -->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <!-- Grey Text Style -->
    <style name="greyText" parent="text">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Blue Text Style -->
    <style name="blueText" parent="text">
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <!-- Img / Btn Style -->
    <style name="imgBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Input Style -->
    <style name="shadowInput">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColorHint">@color/mediumGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Home Card Style -->
    <style name="shadowHomeCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_bg_card_1_shadow</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
