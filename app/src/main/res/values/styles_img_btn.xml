<resources>

    <!-- Img / Btn Style -->
    <style name="ImgBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Round Top Bar Image Style -->
    <style name="RoundTopBarImage" parent="ImgBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/shape_shadow_bottom_round</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/bar_top_2</item>
    </style>

    <!-- Top Bar Image Style -->
    <style name="TopBarImage" parent="ImgBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_shadow_bottom</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/bar_top_1</item>
    </style>

    <!-- Bottom Bar Image Style -->
    <style name="BottomBarImage" parent="ImgBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/shape_shadow_top</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/bar_bottom_1</item>
    </style>

    <!-- Profile Image Style -->
    <style name="ProfileImage">
        <item name="android:layout_width">@dimen/profile_pic_size</item>
        <item name="android:layout_height">@dimen/profile_pic_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/ic_placeholder_user_pic</item>
    </style>

    <!-- Form Btn Style -->
    <style name="FormBtn" parent="ImgBtn">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/input_padding</item>
    </style>

    <!-- Favourite Btn Style -->
    <style name="FavouriteBtn" parent="ImgBtn">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/btn_margin</item>
        <item name="android:layout_marginEnd">@dimen/btn_margin</item>
    </style>

    <!-- Floating Bottom Btn Style -->
    <style name="FloatingBottomBtn" parent="ImgBtn">
        <item name="android:layout_marginEnd">@dimen/parent_outer_margin</item>
        <item name="android:layout_marginBottom">@dimen/parent_outer_bottom_margin</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <!-- Input Style -->
    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:layout_marginTop">@dimen/input_margin</item>
        <item name="android:paddingLeft">@dimen/input_padding</item>
        <item name="android:paddingRight">@dimen/input_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/input_padding</item>
        <item name="android:textColorHint">@color/mediumGrey</item>
        <item name="android:background">@drawable/shape_shadow_white</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

</resources>